<form id="myform" method="post">
	<input type="hidden" name="mer_id" value="<%=item.mer_id%>">
	<input type="hidden" name="price" value="<%=item.price-item.sale_price%>">
<table class="table table-bordered">
	<tr><td rowspan=0><img src="<%= item.image %>" style="width:300px; height:300px" alt="상품 이미지"></td><td><%= item.name %></td></tr>
	<tr><td>
		<% if (item.sale_yn == 'Y') { %>
			가격: <del style="color: gray"><%= item.price %></del> <%= item.price - item.sale_price %>원
		<% } else { %>
			가격: <%= item.price %>원
		<% } %>
	</td></tr>
	<tr><td>브랜드: <%= item.brand %></td></tr>
	<% if (locals.purchase) {%>
		<tr><td><label for="qty">수량:</label> <input type="number" id="qty" name="qty" value="0"></td></tr>
	<%} %>
	<% if (locals.loginid) {%>
		<tr><td>
			<% if (locals.purchase) {%>
				<button class="btn btn-outline-primary btn-sm" type="submit" onclick="submitForm('/purchase/create')">결제</button>
			<%} else {%>
				<button class="btn btn-outline-primary btn-sm" type="submit" onclick="submitForm('/shop/detail/<%=item.mer_id%>')">구매</button>
			<%} %>
				<button class="btn btn-outline-primary btn-sm" type="submit" onclick="submitForm('/purchase/cart/create')">장바구니</button>
		</td></tr>
	<%} %>
</table>
</form>

<script>
	function submitForm(action) {
		myform.action = action
	}
</script>