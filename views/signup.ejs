<div class="container">	
	<h2>회원가입</h2>
	<form name="form" action="/auth/signup_process" method="post" onsubmit="return confirmForm()">
		<div class="mb-3">
			<label class="form-label" for="id">아이디</label> 
			<input class="form-control" type="text" name="login_id" id="id" style="width:300px;" />
		</div>
		<div class="mb-3">
			<label class="form-label" for="pwd">비밀번호</label> 
			<input class="form-control" type="password" name="password" id="pwd" style="width:300px;"/>
		</div>
		<div class="mb-3">
			<label class="form-label" for="pwd_">비밀번호 확인</label> 
			<input class="form-control" type="password" name="pwdConfirm" id="pwd_" style="width:300px;"/>
		</div>
		<div class="mb-3">
			<label class="form-label" for="name">이름</label> 
			<input class="form-control" type="text" name="name" id="name" style="width:300px;"/>
		</div>
		<div class="mb-3">
			<label class="form-label" for="add">주소</label> 
			<input class="form-control" type="text" name="address" id="add" style="width:300px;"/>
		</div>
		<div class="mb-3">
			<label class="form-label" for="tel">전화번호</label> 
			<input class="form-control" type="text" name="tel" id="tel" style="width:300px;"/>
		</div>
		<div class="mb-3">
			<label class="form-label" for="bitth">생년월일</label> 
			<input class="form-control" type="text" name="birth" id="birth" style="width:300px;"/>
		</div>
    <button class="btn btn-outline-primary btn-sm" type="submit">회원가입</button>
  </form>
  
  <script>
	function confirmPwd() {
		var pw1 = form.password.value
		var pw2 = form.pwdConfirm.value
		if (pw1 == pw2) {
			return true
		} else {
			alert('비밀번호가 일치하지 않습니다. 다시 확인해주세요.')
			return false
		}
	}
	function confirmForm() {
		if (!confirmPwd()) return false

		for (const i of [0, 1, 3, 6]) {
			if (form.elements[i].value == '') {
				alert(`입력하지 않은 필수 항목이 있습니다: ${form.elements[i].name}`)
				form.elements[i].focus()
				return false
			}
		}
		return true
	}
  </script>
</div>